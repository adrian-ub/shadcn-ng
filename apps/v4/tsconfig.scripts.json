{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "isolatedModules": false
  },
  "include": ["scripts/**/*.{ts,mts}"],
  "exclude": ["node_modules"]
}
