---
import { cn } from '@/lib/utils'
import { buttonVariants } from '@/registry/new-york-v4/ui/button'
import IconArrowLeft from '~icons/tabler/arrow-left'
import IconArrowRight from '~icons/tabler/arrow-right'

const { pagination } = Astro.locals.starlightRoute
const { prev, next } = pagination
---

<div class="mx-auto flex h-auto w-full max-w-2xl items-center gap-4 px-4 py-6 md:px-0 justify-between">
  {
    prev && (
      <a href={prev.href} class={cn(buttonVariants({ variant: 'secondary', size: 'sm' }), 'shadow-none')}>
        <IconArrowLeft /> {prev.label}
      </a>
    )
  }
  {
    next && (
      <a href={next.href} class={cn(buttonVariants({ variant: 'secondary', size: 'sm' }), 'ml-auto shadow-none')}>
        {next.label} <IconArrowRight />
      </a>
    )
  }
</div>
