---
import type { HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/utils'

export type Props = HTMLAttributes<'td'>

const { class: className, ...props } = Astro.props
---

<td class={cn('px-4 py-2 text-left [&[align=center]]:text-center [&[align=right]]:text-right', className)} {...props}>
  <slot />
</td>
