{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "shadcn-ng/schema": ["../../packages/shadcn-ng/src/registry/schema.ts"],
      "shadcn-ng/*": ["../../packages/shadcn-ng/src/*"],
      "@/registry/*": ["registry/*"],
      "@/lib/*": ["lib/*", "src/lib/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
