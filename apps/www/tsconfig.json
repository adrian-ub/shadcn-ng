{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "shadcn-ng/schema": [
        "../../packages/shadcn-ng/src/registry/schema.ts"
      ],
      "shadcn-ng/*": [
        "../../packages/shadcn-ng/src/*"
      ]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
      {
        "name": "@angular/language-service"
      }
    ]
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
