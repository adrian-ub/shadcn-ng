    "del-cli": "^5.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "simple-git-hooks": "^2.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
