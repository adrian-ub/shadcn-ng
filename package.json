{
  "name": "shadcn-ng",
  "type": "module",
  "version": "1.1.0",
  "packageManager": "pnpm@10.6.2",
  "description": "Accessible and customizable components that you can copy and paste into your apps. Free. Open Source. Use this to build your own component library.",
  "author": "Adri√°n UB",
  "license": "MIT",
  "funding": "https://github.com/sponsors/adrian-ub",
  "homepage": "https://github.com/adrian-ub/shadcn-ng#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrian-ub/shadcn-ng.git"
  },
  "bugs": "https://github.com/adrian-ub/shadcn-ng/issues",
  "keywords": [
    "components",
    "ui",
    "tailwind",
    "radix-ui",
    "shadcn",
    "shadcn-ng",
    "ng",
    "angular"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./registry": "./dist/registry/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "shadcn-ng": "bin/shadcn-ng.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "docs": "nr -C docs dev",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "commander": "catalog:cli",
    "cosmiconfig": "catalog:utils",
    "deepmerge": "catalog:utils",
    "fast-glob": "catalog:utils",
    "fs-extra": "catalog:utils",
    "https-proxy-agent": "catalog:utils",
    "kleur": "catalog:utils",
    "node-fetch": "catalog:utils",
    "ora": "catalog:utils",
    "postcss": "catalog:cli",
    "prompts": "catalog:cli",
    "stringify-object": "catalog:utils",
    "tailwindcss": "catalog:utils",
    "ts-morph": "catalog:utils",
    "tsconfig-paths": "catalog:utils",
    "type-fest": "catalog:utils",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/fs-extra": "catalog:types",
    "@types/node": "catalog:types",
    "@types/prompts": "catalog:types",
    "@types/stringify-object": "catalog:types",
    "astro-eslint-parser": "catalog:cli",
    "bumpp": "catalog:cli",
    "class-variance-authority": "catalog:utils",
    "clsx": "catalog:utils",
    "eslint": "catalog:cli",
    "eslint-plugin-astro": "catalog:cli",
    "eslint-plugin-format": "catalog:cli",
    "lint-staged": "catalog:cli",
    "prettier-plugin-astro": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tailwind-merge": "catalog:utils",
    "tinyexec": "catalog:utils",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "tw-animate-css": "catalog:utils",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
