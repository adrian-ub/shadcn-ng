{
  "name": "@adrianub/shadcn-ng",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "author": "Adri√°n UB",
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "release": "changeset version",
    "pub:beta": "cd packages/shadcn-ng && pnpm pub:beta",
    "shadcn-ng:build": "pnpm --filter=shadcn-ng build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "simple-git-hooks",
    "build": "pnpm -r run build",
    "build:cli": "pnpm --filter=shadcn-ng build",
    "typecheck": "pnpm --filter=!www typecheck"
  },
  "dependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/node": "22.17.2",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "16.1.5",
    "puppeteer": "^24.17.1",
    "simple-git-hooks": "2.13.1",
    "tailwindcss": "4.1.12",
    "tsdown": "^0.14.2",
    "tsx": "4.20.4",
    "typescript": "~5.8.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "volta": {
    "node": "22.18.0"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm dlx commitlint --edit $1",
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
