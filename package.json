{
  "name": "shadcn-ng",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "dev": "pnpm -r run dev",
    "lint": "pnpm -r run lint",
    "lint:md": "pnpm -r run lint:md",
    "format:check": "pnpm -r run format:check",
    "format:write": "pnpm -r run format:write",
    "prepare": "simple-git-hooks",
    "build": "pnpm -r run build",
    "build:cli": "pnpm --filter=shadcn-ng build",
    "typecheck": "pnpm --filter=!www typecheck",
    "validate:registries": "pnpm --filter=v4 validate:registries"
  },
  "dependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.15.2",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.25",
