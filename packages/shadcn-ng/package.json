{
  "name": "shadcn-ng",
  "type": "module",
  "version": "1.1.0",
  "description": "Accessible and customizable components that you can copy and paste into your apps. Free. Open Source. Use this to build your own component library.",
  "author": "Adri√°n UB",
  "license": "MIT",
  "homepage": "https://github.com/adrian-ub/shadcn-ng#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrian-ub/shadcn-ng.git",
    "directory": "packages/shadcn-ng"
  },
  "bugs": {
    "url": "https://github.com/adrian-ub/shadcn-ng/issues"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "run": "tsx ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta"
  },
  "dependencies": {
    "@antfu/ni": "25.0.0",
    "@dotenvx/dotenvx": "1.49.0",
    "@modelcontextprotocol/sdk": "1.17.3",
    "commander": "14.0.0",
    "cosmiconfig": "9.0.0",
    "dedent": "1.6.0",
    "deepmerge": "4.3.1",
    "diff": "8.0.2",
    "execa": "9.6.0",
    "fast-glob": "3.3.3",
    "fs-extra": "11.3.1",
    "fuzzysort": "3.1.0",
    "https-proxy-agent": "7.0.6",
    "kleur": "4.1.5",
    "node-fetch": "3.3.2",
    "ora": "8.2.0",
    "postcss": "8.5.6",
    "prompts": "2.4.2",
    "stringify-object": "5.0.0",
    "ts-morph": "26.0.0",
    "tsconfig-paths": "4.2.0",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@types/stringify-object": "^4.0.5",
    "type-fest": "^4.41.0"
  }
}
