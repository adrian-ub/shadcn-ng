---
import { PageHeader, PageHeaderHeading, PageHeaderDescription, PageActions } from '~/components/page-header'
import Announcement from '~/components/Announcement.astro'
import LinkButton from '~/components/starlight/LinkButton.astro'

const { data } = Astro.locals.starlightRoute.entry
const { title = data.title, tagline, actions = [] } = data.hero || {}
---

<PageHeader>
  <Announcement />
  <PageHeaderHeading>{title}</PageHeaderHeading>
  <PageHeaderDescription>{tagline}</PageHeaderDescription>
  <PageActions>
    {
      actions.map(({ attrs: { class: className, ...attrs } = {}, link: href, text, variant }) => (
        <LinkButton {href} {variant} class:list={[className]} {...attrs}>
          {text}
        </LinkButton>
      ))
    }
  </PageActions>
</PageHeader>
