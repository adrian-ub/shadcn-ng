---
import SiteHeader from '~/components/SiteHeader.astro'
import SiteFooter from '~/components/SiteFooter.astro'

import DocsSidebar from '~/components/starlight/Sidebar.astro'

const { hasSidebar } = Astro.locals.starlightRoute
---

<div
  class="text-foreground group/body overscroll-none font-sans antialiased [--footer-height:calc(var(--spacing)*14)] [--header-height:calc(var(--spacing)*14)] xl:[--footer-height:calc(var(--spacing)*24)]"
>
  <div class="bg-background relative z-10 flex min-h-svh flex-col">
    <SiteHeader />
    <main class="flex flex-1 flex-col">
      {!hasSidebar && <slot />}
      {
        hasSidebar && (
          <div class="container-wrapper flex flex-1 flex-col px-2">
            <DocsSidebar />
            <div class="h-full w-full">
              <slot />
            </div>
          </div>
        )
      }
    </main>
    <SiteFooter />
  </div>
</div>
