---
import FileIcon from '~icons/lucide/file'

import { Icons } from './index'

export type Props = {
  language: string
}

const { language } = Astro.props

function getIconForLanguage(lang: string) {
  switch (lang) {
    case 'json':
      return { Icon: Icons.json }
    case 'css':
      return { Icon: Icons.css, class: 'fill-foreground' }
    case 'js':
    case 'jsx':
    case 'ts':
    case 'tsx':
    case 'typescript':
      return { Icon: Icons.ts, class: 'fill-foreground' }
    default:
      return { Icon: FileIcon }
  }
}

const { Icon, class: iconClass } = getIconForLanguage(language)
---

<Icon class={iconClass} />
