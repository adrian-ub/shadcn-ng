---
import { Image as ImageAssets } from 'astro:assets'
import { cn } from '~/lib/utils'
import type { HTMLAttributes } from 'astro/types'
export type Props = HTMLAttributes<'img'>
const { class: className, src, width, height, alt, ...props } = Astro.props
---

<ImageAssets
  class={cn('mt-6 rounded-md border', className)}
  src={src || ''}
  width={Number(width)}
  height={Number(height)}
  alt={alt || ''}
  {...props}
/>
